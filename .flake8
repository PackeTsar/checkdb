[flake8]
extend-select = E,W
ignore =
    # Standard is changing: https://www.flake8rules.com/rules/W503.html
    W503
exclude =
    # Don't check Django's generated migration files
    */migrations/*
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # Don't check the venv folder
    env,
